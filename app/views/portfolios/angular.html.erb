<h1>Angular Portfolio Items</h1>

<% @angular_portfolio_items.each do |angular_portfolio_item| %>

  <p><%=link_to angular_portfolio_item.title, portfolio_show_path(angular_portfolio_item) %></p>
  <p><%= angular_portfolio_item.subtitle %></p>
  <p><%= angular_portfolio_item.body %></p>
  <%= image_tag angular_portfolio_item.thumb_image if angular_portfolio_item.thumb_image != nil%>
  <%= link_to "Edit", edit_portfolio_path(angular_portfolio_item) %>
  <%= link_to "Delete Portfolio Item", portfolio_path(angular_portfolio_item), method: :delete, data: {conform: 'Are you sure?'} %>

<% end %>
